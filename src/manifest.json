{
	"name": "DuckDuckGo !Bangs - Chrome",
	"version": "1.0",
	"description": "Mimics the functionality of the DuckDuckGo !Bangs, but for chrome.",
	"manifest_version": 2,
	"browser_action": {
		"default_icon": "assets/icons/icon-16.png",
		"default_popup": "popup/index.html",
		"default_title": "DuckDuckGo !Bangs - Chrome"
	},
	"background": {
		"scripts": ["background/index.js"],
		"persistent": false
	},
	"omnibox": { "keyword": "!" },
	"icons": {
		"16": "assets/icons/icon-16.png",
		"48": "assets/icons/icon-48.png",
		"128": "assets/icons/icon-128.png"
	},
	"permissions": ["storage"]
}
